{
  "name": "wirebot",
  "version": "1.0.0",
  "engines": {
    "node": ">=6.9.0"
  },
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "start-dev": "nodemon index.js",
    "lint:fix": "eslint --fix . --ext .js",
    "test": "export NODE_ENV=test && nyc _mocha --recursive test/index.spec.js"
  },
  "repository": "https://github.com/andela-ik/wirebot",
  "author": "wire-devs",
  "license": "MIT",
  "dependencies": {
    "@slack/client": "^3.14.1",
    "@slack/events-api": "^1.0.1",
    "@slack/interactive-messages": "^0.2.0",
    "axios": "^0.17.1",
    "body-parser": "^1.18.2",
    "dotenv": "^4.0.0",
    "express": "^4.16.2",
    "moment": "^2.21.0",
    "node-cron": "^1.2.1"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0-beta.49",
    "@babel/preset-env": "^7.0.0-beta.49",
    "@babel/register": "^7.0.0-beta.49",
    "babel-plugin-istanbul": "^4.1.6",
    "chai": "^4.1.2",
    "eslint": "^4.19.0",
    "eslint-plugin-import": "^2.9.0",
    "glob": "^7.1.2",
    "istanbul": "^0.4.5",
    "mocha": "^5.2.0",
    "nodemon": "^1.12.1",
    "nyc": "^12.0.1"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "current"
          }
        }
      ]
    ],
    "env": {
      "test": {
        "plugins": [
          "istanbul"
        ]
      }
    }
  },
  "nyc": {
    "all": true,
    "check-coverage": false,
    "eager": true,
    "require": "@babel/register",
    "cache": true,
    "babel-cache": true,
    "reporter": [
      "lcov",
      "text"
    ],
    "sourceMap": false,
    "instrument": false,
    "clean": true,
    "temp-directory": "./coverage/.tmp"
  }
}
